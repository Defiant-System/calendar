<CaptionToolBar>
	<Group width="23%">
		<Tool symbol="icon-calendar"/>

		<Options>
			<Tool symbol="icon-chevron-left"/>
			<Tool name="Today"/>
			<Tool symbol="icon-chevron-right"/>
		</Options>
	</Group>
	<Group>
		<Options>
			<Tool name="Day" click="switch-view" arg="day"/>
			<Tool name="Week" click="switch-view" arg="week"/>
			<Tool name="Month" click="switch-view" arg="month"/>
			<Tool name="Year" click="switch-view" arg="year" state="active"/>
		</Options>
	</Group>
	<Group width="31%">
		<Search width="170px" placeholder="Search"/>
	</Group>
</CaptionToolBar>