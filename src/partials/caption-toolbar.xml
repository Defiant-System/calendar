<CaptionToolBar>
	<Group width="170px">
		<Tool symbol="icon-calendar" click="toggle-sidebar"/>
		<Options>
			<Tool symbol="icon-chevron-left" click="view-go" arg="-1"/>
			<Tool name="Today" click="view-go" arg="now"/>
			<Tool symbol="icon-chevron-right" click="view-go" arg="1"/>
		</Options>
	</Group>
	<Group>
		<Options>
			<Tool name="Day" click="switch-view" arg="day"/>
			<Tool name="Week" click="switch-view" arg="week"/>
			<Tool name="Month" click="switch-view" arg="month"/>
			<Tool name="Year" click="switch-view" arg="year"/>
		</Options>
	</Group>
	<Group width="31%">
		<Search width="170px" placeholder="Search" state="disabled"/>
	</Group>
</CaptionToolBar>